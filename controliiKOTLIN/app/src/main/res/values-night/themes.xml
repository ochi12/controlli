<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Controlii" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <item name="android:colorBackground">@color/back_ground</item>
        <item name="android:statusBarColor">@color/back_ground</item>
        <item name="android:windowLightStatusBar">@color/text_color</item>
        <item name="android:navigationBarColor">@color/back_ground</item>

    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="TransparentDialogThemeForTuning" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/slider_progress_container</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="elevation">60dp</item>
        <item name="android:translationZ">20dp</item>
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Base.Theme.SplashScreen.DayNight" parent="Theme.SplashScreen" tools:ignore="PrivateResource">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_animated</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@color/back_ground</item>
        <item name="postSplashScreenTheme">@style/Theme.Controlii</item>
    </style>


    <style name = "editTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textSelectHandleLeft">@drawable/text_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/text_handle_right</item>
        <item name="android:textSelectHandle">@drawable/text_handle_middle</item>
    </style>

</resources>